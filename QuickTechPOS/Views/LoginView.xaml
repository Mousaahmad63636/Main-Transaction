<UserControl x:Class="QuickTechPOS.Views.LoginView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">

    <Grid Background="#F1F5F9">
        <Border Width="400" Height="450" 
                Background="White" 
                CornerRadius="8" 
                BorderBrush="#E2E8F0" 
                BorderThickness="1"
                Effect="{StaticResource DropShadowEffect}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <Border Grid.Row="0" 
                        Background="#1E293B" 
                        CornerRadius="8,8,0,0"
                        Padding="0,20">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="{DynamicResource ApplicationTitle}" 
                                   FontSize="28" 
                                   FontWeight="Bold" 
                                   Foreground="White"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="Point of Sale System" 
                                   FontSize="16" 
                                   Foreground="#94A3B8"
                                   HorizontalAlignment="Center"
                                   Margin="0,4,0,0"/>
                    </StackPanel>
                </Border>

                <StackPanel Grid.Row="1" Margin="40,30">
                    <!-- Username -->
                    <TextBlock Text="{DynamicResource Username}" 
                               Margin="0,0,0,6" 
                               FontSize="14" 
                               FontWeight="SemiBold"
                               Foreground="#334155"/>
                    <Border BorderThickness="1" 
                            BorderBrush="#CBD5E1" 
                            CornerRadius="4" 
                            Margin="0,0,0,16">
                        <TextBox x:Name="UsernameTextBox"
                                 Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}" 
                                 FontSize="15" 
                                 Padding="12,10"
                                 BorderThickness="0"
                                 Background="Transparent"/>
                    </Border>

                    <!-- Password -->
                    <TextBlock Text="{DynamicResource Password}" 
                               Margin="0,0,0,6" 
                               FontSize="14" 
                               FontWeight="SemiBold"
                               Foreground="#334155"/>
                    <Border BorderThickness="1" 
                            BorderBrush="#CBD5E1" 
                            CornerRadius="4" 
                            Margin="0,0,0,16">
                        <PasswordBox x:Name="PasswordBox" 
                                     FontSize="15" 
                                     Padding="12,10"
                                     BorderThickness="0"
                                     Background="Transparent"
                                     PasswordChanged="PasswordBox_PasswordChanged"/>
                    </Border>

                    <!-- Error Message -->
                    <TextBlock Text="{Binding ErrorMessage}" 
                               Foreground="#EF4444" 
                               TextWrapping="Wrap" 
                               Margin="0,0,0,16" 
                               MinHeight="20"
                               FontWeight="Medium"/>

                    <!-- Login Button -->
                    <Button Content="{DynamicResource SignInButton}" 
                            Command="{Binding LoginCommand}"
                            Background="#2563EB" 
                            Foreground="White" 
                            FontSize="16" 
                            FontWeight="SemiBold" 
                            Padding="16,12" 
                            Margin="0,8,0,0"
                            Cursor="Hand">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="4"/>
                            </Style>
                        </Button.Resources>
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#2563EB"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#1D4ED8"/>
                                    </Trigger>
                                    <Trigger Property="IsEnabled" Value="False">
                                        <Setter Property="Background" Value="#94A3B8"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <!-- Version Info -->
                    <TextBlock Text="QuickTech POS v2.0" 
                               Foreground="#64748B" 
                               FontSize="12"
                               HorizontalAlignment="Center"
                               Margin="0,30,0,0"/>

                    <!-- Language Selection -->
                    <StackPanel Orientation="Horizontal" 
                                HorizontalAlignment="Center" 
                                Margin="0,15,0,0">
                        <ComboBox x:Name="LanguageSelector" 
                                  Width="150" 
                                  Height="30"
                                  SelectionChanged="LanguageSelector_SelectionChanged"/>
                    </StackPanel>

                    <!-- Loading Indicator -->
                    <Grid Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"
                          Margin="0,16,0,0">
                        <ProgressBar IsIndeterminate="True" 
                                     Height="4"/>
                    </Grid>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>