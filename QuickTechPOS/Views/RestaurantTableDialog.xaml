<!-- File: QuickTechPOS/Views/RestaurantTableDialog.xaml -->

<Window x:Class="QuickTechPOS.Views.RestaurantTableDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:QuickTechPOS"
        Title="Select Restaurant Table"
        Width="1000" Height="700"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        ShowInTaskbar="False"
        Background="#F8FAFC"
        UseLayoutRounding="True">

    <Window.Resources>
        <!-- Converters -->
        <local:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <local:InverseBooleanToVisibilityConverter x:Key="InverseBooleanToVisibilityConverter"/>
        <local:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>

        <!-- Base Styles -->
        <Style x:Key="HeaderText" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#1E293B"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>

        <Style x:Key="SectionTitle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Foreground" Value="#334155"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>

        <!-- Input Controls -->
        <Style x:Key="SearchBox" TargetType="TextBox">
            <Setter Property="Height" Value="36"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="12,0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#CBD5E1"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <ScrollViewer x:Name="PART_ContentHost" Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Button Styles -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#2563EB"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="MinHeight" Value="36"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"
                                              Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1D4ED8"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#94A3B8"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="#64748B"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#475569"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SuccessButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="#10B981"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#059669"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Panel Styles -->
        <Style x:Key="CardPanelStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E2E8F0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect ShadowDepth="1" Direction="270" 
                                      Color="#1E293B" Opacity="0.05" BlurRadius="8"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Table Card Style -->
        <Style x:Key="TableCard" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect ShadowDepth="1" Direction="270" 
                                      Color="#1E293B" Opacity="0.1" BlurRadius="4"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <DataTrigger Binding="{Binding Status}" Value="Available">
                    <Setter Property="BorderBrush" Value="#10B981"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Status}" Value="Occupied">
                    <Setter Property="BorderBrush" Value="#EF4444"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Status}" Value="Reserved">
                    <Setter Property="BorderBrush" Value="#F59E0B"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Status}" Value="Out of Service">
                    <Setter Property="BorderBrush" Value="#64748B"/>
                </DataTrigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect ShadowDepth="2" Direction="270" 
                                              Color="#2563EB" Opacity="0.2" BlurRadius="8"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Status Badge Style -->
        <Style x:Key="StatusBadge" TargetType="Border">
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding Status}" Value="Available">
                    <Setter Property="Background" Value="#DCFCE7"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Status}" Value="Occupied">
                    <Setter Property="Background" Value="#FEE2E2"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Status}" Value="Reserved">
                    <Setter Property="Background" Value="#FEF3C7"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Status}" Value="Out of Service">
                    <Setter Property="Background" Value="#F1F5F9"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <!-- Data Templates -->
        <DataTemplate x:Key="TableCardTemplate">
            <Border Style="{StaticResource TableCard}">
                <Border.InputBindings>
                    <MouseBinding MouseAction="LeftDoubleClick" 
                                  Command="{Binding DataContext.SelectTableCommand, 
                                           RelativeSource={RelativeSource AncestorType=Window}}" 
                                  CommandParameter="{Binding}"/>
                </Border.InputBindings>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Table Number -->
                    <TextBlock Grid.Row="0" 
                               Text="{Binding DisplayName}" 
                               FontWeight="Bold"
                               FontSize="18"
                               HorizontalAlignment="Center"
                               Foreground="#1E293B"
                               Margin="0,0,0,8"/>

                    <!-- Status Badge -->
                    <Border Grid.Row="1" 
                            Style="{StaticResource StatusBadge}"
                            Margin="0,0,0,8">
                        <TextBlock Text="{Binding Status}" 
                                   FontWeight="SemiBold"
                                   FontSize="12"
                                   HorizontalAlignment="Center">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Status}" Value="Available">
                                            <Setter Property="Foreground" Value="#166534"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding Status}" Value="Occupied">
                                            <Setter Property="Foreground" Value="#991B1B"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding Status}" Value="Reserved">
                                            <Setter Property="Foreground" Value="#92400E"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding Status}" Value="Out of Service">
                                            <Setter Property="Foreground" Value="#475569"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </Border>

                    <!-- Description -->
                    <TextBlock Grid.Row="2" 
                               Text="{Binding Description}"
                               FontSize="12"
                               Foreground="#64748B"
                               TextWrapping="Wrap"
                               HorizontalAlignment="Center"
                               Visibility="{Binding Description, Converter={StaticResource StringToVisibilityConverter}}"
                               Margin="0,0,0,8"/>

                    <!-- Spacer -->
                    <Grid Grid.Row="3"/>

                    <!-- Actions -->
                    <StackPanel Grid.Row="4" 
                                Orientation="Horizontal"
                                HorizontalAlignment="Center">

                        <!-- Select Button -->
                        <Button Content="Select"
                                Command="{Binding DataContext.SelectTableCommand, 
                                         RelativeSource={RelativeSource AncestorType=Window}}"
                                CommandParameter="{Binding}"
                                Style="{StaticResource SuccessButton}"
                                Margin="0,0,4,0"
                                FontSize="12"
                                Padding="12,6"/>

                        <!-- Change Status Button -->
                        <Button Content="Change Status"
                                Command="{Binding DataContext.ChangeTableStatusCommand, 
                                         RelativeSource={RelativeSource AncestorType=Window}}"
                                CommandParameter="{Binding}"
                                Style="{StaticResource SecondaryButton}"
                                Margin="4,0,0,0"
                                FontSize="12"
                                Padding="12,6"/>
                    </StackPanel>
                </Grid>
            </Border>
        </DataTemplate>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" 
                Background="#F8FAFC" 
                BorderBrush="#E2E8F0" 
                BorderThickness="0,0,0,1" 
                Padding="24,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="Select Restaurant Table" 
                               Style="{StaticResource SectionTitle}"/>
                    <TextBlock Text="Choose a table for this transaction" 
                               Style="{StaticResource HeaderText}"
                               Foreground="#64748B"/>
                </StackPanel>

                <StackPanel Grid.Column="1" 
                            Orientation="Horizontal">
                    <!-- Statistics Display -->
                    <Border Background="White" 
                            BorderBrush="#E2E8F0" 
                            BorderThickness="1"
                            CornerRadius="6"
                            Padding="12,8"
                            Margin="0,0,8,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Available: " 
                                       FontWeight="SemiBold"
                                       Foreground="#10B981"/>
                            <TextBlock Text="{Binding AvailableTableCount}" 
                                       FontWeight="Bold"
                                       Foreground="#10B981"/>

                            <TextBlock Text=" | Occupied: " 
                                       FontWeight="SemiBold"
                                       Foreground="#EF4444"
                                       Margin="8,0,0,0"/>
                            <TextBlock Text="{Binding OccupiedTableCount}" 
                                       FontWeight="Bold"
                                       Foreground="#EF4444"/>
                        </StackPanel>
                    </Border>

                    <!-- Refresh Button -->
                    <Button Content="🔄 Refresh"
                            Command="{Binding RefreshTablesCommand}"
                            Style="{StaticResource SecondaryButton}"
                            FontSize="12"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Filter Section -->
        <Border Grid.Row="1" 
                Background="White" 
                BorderBrush="#E2E8F0" 
                BorderThickness="0,0,0,1" 
                Padding="24,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Search Box -->
                <StackPanel Grid.Column="0" Margin="0,0,16,0">
                    <TextBlock Text="Search Tables" 
                               Style="{StaticResource HeaderText}"/>
                    <TextBox Text="{Binding SearchQuery, UpdateSourceTrigger=PropertyChanged}"
                             x:Name="SearchTextBox">
                        <TextBox.Resources>
                            <VisualBrush x:Key="HintBrush" TileMode="None" Opacity="0.5" Stretch="None" AlignmentX="Left">
                                <VisualBrush.Visual>
                                    <TextBlock Text="Search by table number or description..." 
                                               FontStyle="Italic" 
                                               Margin="12,0,0,0" />
                                </VisualBrush.Visual>
                            </VisualBrush>
                        </TextBox.Resources>
                        <TextBox.Style>
                            <Style TargetType="TextBox" BasedOn="{StaticResource SearchBox}">
                                <Style.Triggers>
                                    <Trigger Property="Text" Value="{x:Null}">
                                        <Setter Property="Background" Value="{StaticResource HintBrush}" />
                                    </Trigger>
                                    <Trigger Property="Text" Value="">
                                        <Setter Property="Background" Value="{StaticResource HintBrush}" />
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </TextBox.Style>
                    </TextBox>
                </StackPanel>

                <!-- Status Filter -->
                <StackPanel Grid.Column="1" Margin="0,0,16,0">
                    <TextBlock Text="Filter by Status" 
                               Style="{StaticResource HeaderText}"/>
                    <ComboBox ItemsSource="{Binding StatusFilterOptions}"
                              SelectedItem="{Binding SelectedStatusFilter}"
                              Height="36"
                              VerticalContentAlignment="Center"
                              Padding="12,0"
                              BorderThickness="1"
                              BorderBrush="#CBD5E1"
                              FontSize="14"/>
                </StackPanel>

                <!-- Show Only Available Toggle -->
                <StackPanel Grid.Column="2" 
                            VerticalAlignment="Bottom"
                            Margin="0,0,16,0">
                    <CheckBox Content="Show Only Available"
                              IsChecked="{Binding ShowOnlyAvailable}"
                              FontWeight="SemiBold"
                              Foreground="#1E293B"/>
                </StackPanel>

                <!-- Clear Filters Button -->
                <StackPanel Grid.Column="3" 
                            VerticalAlignment="Bottom">
                    <Button Content="Clear Filters"
                            Command="{Binding ClearFiltersCommand}"
                            Style="{StaticResource SecondaryButton}"
                            FontSize="12"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Tables Grid -->
        <ScrollViewer Grid.Row="2" 
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled"
                      Padding="24"
                      Background="#F8FAFC">

            <!-- Single Parent Container for ScrollViewer Content -->
            <Grid>
                <!-- Loading Indicator -->
                <Grid Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <StackPanel HorizontalAlignment="Center" 
                                VerticalAlignment="Center">
                        <ProgressBar IsIndeterminate="True" 
                                     Width="200" 
                                     Height="4"
                                     Foreground="#2563EB"
                                     Margin="0,0,0,16"/>
                        <TextBlock Text="Loading restaurant tables..." 
                                   HorizontalAlignment="Center"
                                   FontSize="16"
                                   Foreground="#64748B"/>
                    </StackPanel>
                </Grid>

                <!-- Tables Display -->
                <Grid Visibility="{Binding IsLoading, Converter={StaticResource InverseBooleanToVisibilityConverter}}">
                    <!-- No Tables Message -->
                    <StackPanel HorizontalAlignment="Center" 
                                VerticalAlignment="Center"
                                Visibility="{Binding FilteredTableCount, Converter={StaticResource StringToVisibilityConverter}, ConverterParameter='0'}">
                        <TextBlock Text="📍" 
                                   FontSize="48" 
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,16"
                                   Opacity="0.5"/>
                        <TextBlock Text="No tables found" 
                                   FontSize="18"
                                   FontWeight="SemiBold"
                                   HorizontalAlignment="Center"
                                   Foreground="#64748B"
                                   Margin="0,0,0,8"/>
                        <TextBlock Text="Try adjusting your search criteria or refresh the table list" 
                                   FontSize="14"
                                   HorizontalAlignment="Center"
                                   Foreground="#94A3B8"/>
                    </StackPanel>

                    <!-- Tables Grid -->
                    <ItemsControl ItemsSource="{Binding FilteredTables}"
                                  ItemTemplate="{StaticResource TableCardTemplate}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <UniformGrid Columns="4" 
                                             HorizontalAlignment="Left"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                    </ItemsControl>
                </Grid>
            </Grid>
        </ScrollViewer>

        <!-- Footer -->
        <Border Grid.Row="3" 
                Background="White" 
                BorderBrush="#E2E8F0" 
                BorderThickness="0,1,0,0" 
                Padding="24,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Status and Count -->
                <StackPanel Grid.Column="0" 
                            Orientation="Horizontal"
                            VerticalAlignment="Center">
                    <TextBlock Text="{Binding StatusMessage}" 
                               Foreground="#64748B"
                               VerticalAlignment="Center"/>

                    <TextBlock Text=" | " 
                               Foreground="#CBD5E1"
                               Margin="8,0"
                               VerticalAlignment="Center"/>

                    <TextBlock Text="Showing " 
                               Foreground="#64748B"
                               VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding FilteredTableCount}" 
                               FontWeight="SemiBold"
                               Foreground="#1E293B"
                               VerticalAlignment="Center"/>
                    <TextBlock Text=" tables" 
                               Foreground="#64748B"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Action Buttons -->
                <StackPanel Grid.Column="1" 
                            Orientation="Horizontal">
                    <Button Content="Cancel"
                            Command="{Binding CancelCommand}"
                            Style="{StaticResource SecondaryButton}"
                            Margin="0,0,8,0"
                            MinWidth="100"/>

                    <Button Content="Statistics"
                            Command="{Binding ShowStatisticsCommand}"
                            Style="{StaticResource SecondaryButton}"
                            MinWidth="100"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>