<UserControl x:Class="QuickTechPOS.Views.TransactionView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QuickTechPOS"
             xmlns:helpers="clr-namespace:QuickTechPOS.Helpers"
             mc:Ignorable="d" 
             d:DesignHeight="768" d:DesignWidth="1366"
             Background="#F8FAFC"
             UseLayoutRounding="True">

    <UserControl.Resources>
        <!-- Converters -->
        <local:BooleanToIndexConverter x:Key="BooleanToIndexConverter"/>
        <local:BooleanToWholesaleTextConverter x:Key="BooleanToWholesaleTextConverter"/>
        <local:BooleanToStringConverter x:Key="BooleanToStringConverter"/>
        <local:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <local:InverseBooleanToVisibilityConverter x:Key="InverseBooleanToVisibilityConverter"/>
        <local:PositiveIntToVisibilityConverter x:Key="PositiveIntToVisibilityConverter"/>
        <local:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
        <local:ImagePathToVisibilityConverter x:Key="ImagePathToVisibilityConverter"/>
        <local:NumericToVisibilityConverter x:Key="NumericToVisibilityConverter"/>
        <helpers:ImagePathConverter x:Key="ImagePathConverter"/>

        <!-- Drop Shadow Effect -->
        <DropShadowEffect x:Key="DropShadowEffect" ShadowDepth="1" Direction="270" 
                          Color="#1E293B" Opacity="0.05" BlurRadius="6"/>

        <!-- Optimized Text Styles for 14-inch screens -->
        <Style x:Key="HeaderText" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="#1E293B"/>
            <Setter Property="Margin" Value="0,0,0,4"/>
        </Style>

        <Style x:Key="SectionTitle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#334155"/>
            <Setter Property="Margin" Value="0"/>
        </Style>

        <Style x:Key="CompactText" TargetType="TextBlock">
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="Foreground" Value="#64748B"/>
            <Setter Property="Margin" Value="0"/>
        </Style>

        <!-- Optimized Input Controls -->
        <Style x:Key="CompactSearchBox" TargetType="TextBox">
            <Setter Property="Height" Value="30"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="8,0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#CBD5E1"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ScrollViewer x:Name="PART_ContentHost" Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Compact Category Filter ComboBox -->
        <Style x:Key="CompactCategoryFilter" TargetType="ComboBox">
            <Setter Property="Height" Value="32"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="8,0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#CBD5E1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <!-- Optimized Button Styles -->
        <Style x:Key="CompactButton" TargetType="Button">
            <Setter Property="Background" Value="#2563EB"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="MinHeight" Value="30"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"
                                              Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1D4ED8"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#94A3B8"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="CompactSecondaryButton" TargetType="Button" BasedOn="{StaticResource CompactButton}">
            <Setter Property="Background" Value="#64748B"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#475569"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="CompactSuccessButton" TargetType="Button" BasedOn="{StaticResource CompactButton}">
            <Setter Property="Background" Value="#10B981"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#059669"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="CompactDangerButton" TargetType="Button" BasedOn="{StaticResource CompactButton}">
            <Setter Property="Background" Value="#EF4444"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#DC2626"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="CompactWarningButton" TargetType="Button" BasedOn="{StaticResource CompactButton}">
            <Setter Property="Background" Value="#F59E0B"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#D97706"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Compact Icon Button -->
        <Style x:Key="CompactIconButton" TargetType="Button">
            <Setter Property="Width" Value="30"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#CBD5E1"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F1F5F9"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Opacity" Value="0.5"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Compact Panel Styles -->
        <Style x:Key="CompactCardPanel" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E2E8F0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Effect" Value="{StaticResource DropShadowEffect}"/>
        </Style>

        <Style x:Key="CompactCardHeader" TargetType="Border">
            <Setter Property="Background" Value="#F8FAFC"/>
            <Setter Property="BorderBrush" Value="#E2E8F0"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="CornerRadius" Value="6,6,0,0"/>
        </Style>

        <!-- Compact Product Card -->
        <Style x:Key="CompactProductCard" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E2E8F0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Margin" Value="0,0,4,4"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Height" Value="120"/>
            <Setter Property="Width" Value="100"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect ShadowDepth="0" Direction="270" 
                                      Color="#1E293B" Opacity="0.1" BlurRadius="3"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="#2563EB"/>
                    <Setter Property="BorderThickness" Value="2"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Compact Cart Item Template -->
        <DataTemplate x:Key="CompactCartItemTemplate">
            <Border BorderBrush="#F1F5F9" BorderThickness="0,0,0,1" Padding="8,4">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="40"/>
                        <ColumnDefinition Width="60"/>
                        <ColumnDefinition Width="24"/>
                    </Grid.ColumnDefinitions>

                    <!-- Product Info -->
                    <StackPanel Grid.Column="0">
                        <TextBlock Text="{Binding Product.Name}" 
                                   FontWeight="SemiBold" 
                                   FontSize="10"
                                   Foreground="#1E293B"
                                   TextTrimming="CharacterEllipsis"/>
                        <TextBlock Text="{Binding UnitPrice, StringFormat='${0:F2}'}" 
                                   FontSize="9"
                                   Foreground="#64748B"/>
                    </StackPanel>

                    <!-- Quantity -->
                    <Border Grid.Column="1" 
                            Background="White" 
                            BorderBrush="#CBD5E1" 
                            BorderThickness="1"
                            CornerRadius="3"
                            Height="20">
                        <TextBox Text="{Binding Quantity, UpdateSourceTrigger=PropertyChanged}"
                                 BorderThickness="0"
                                 Background="Transparent"
                                 VerticalContentAlignment="Center"
                                 HorizontalContentAlignment="Center"
                                 FontSize="9"
                                 LostFocus="Quantity_LostFocus"/>
                    </Border>

                    <!-- Total -->
                    <TextBlock Grid.Column="2" 
                               Text="{Binding Total, StringFormat='${0:F2}'}" 
                               FontWeight="Bold" 
                               FontSize="10"
                               Foreground="#1E293B"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Right"/>

                    <!-- Remove Button -->
                    <Button Grid.Column="3" 
                            Content="×" 
                            Command="{Binding DataContext.RemoveFromCartCommand, 
                                     RelativeSource={RelativeSource AncestorType=UserControl}}"
                            CommandParameter="{Binding}"
                            Width="18" 
                            Height="18"
                            Background="#EF4444"
                            Foreground="White"
                            FontWeight="Bold"
                            FontSize="10"
                            BorderThickness="0"
                            Cursor="Hand">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" 
                                        CornerRadius="3">
                                    <ContentPresenter HorizontalAlignment="Center" 
                                                      VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                        <Button.Style>
                            <Style TargetType="Button">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#DC2626"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>
            </Border>
        </DataTemplate>

        <!-- Compact Product Card Template -->
        <DataTemplate x:Key="CompactProductCardTemplate">
            <Border Style="{StaticResource CompactProductCard}">
                <Border.InputBindings>
                    <MouseBinding MouseAction="LeftClick" 
                                  Command="{Binding DataContext.AddToCartCommand, 
                                           RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                  CommandParameter="{Binding}"/>
                </Border.InputBindings>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Product Image -->
                    <Border Grid.Row="0" 
                            Background="#F8FAFC"
                            CornerRadius="4,4,0,0"
                            ClipToBounds="True">
                        <Grid>
                            <Image Source="{Binding ImagePath, Converter={StaticResource ImagePathConverter}}"
                                   Stretch="UniformToFill"
                                   RenderOptions.BitmapScalingMode="HighQuality">
                                <Image.Style>
                                    <Style TargetType="Image">
                                        <Style.Triggers>
                                            <Trigger Property="Source" Value="{x:Null}">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Image.Style>
                            </Image>

                            <!-- Placeholder -->
                            <Grid Background="#E2E8F0">
                                <Grid.Style>
                                    <Style TargetType="Grid">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding ImagePath}" Value="">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding ImagePath}" Value="{x:Null}">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Grid.Style>
                                <TextBlock Text="📦" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Grid>

                            <!-- Stock Badge -->
                            <Border HorizontalAlignment="Right" 
                                    VerticalAlignment="Top"
                                    CornerRadius="0,4,0,3"
                                    Padding="3,1">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding StockStatus}" Value="In Stock">
                                                <Setter Property="Background" Value="#10B981"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding StockStatus}" Value="Low Stock">
                                                <Setter Property="Background" Value="#F59E0B"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding StockStatus}" Value="Out of Stock">
                                                <Setter Property="Background" Value="#EF4444"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                                <TextBlock Text="{Binding StockStatus}" 
                                           Foreground="White" 
                                           FontSize="7"
                                           FontWeight="Bold"/>
                            </Border>
                        </Grid>
                    </Border>

                    <!-- Product Name -->
                    <TextBlock Grid.Row="1" 
                               Text="{Binding Name}" 
                               FontWeight="Bold"
                               FontSize="9"
                               Foreground="#1E293B"
                               TextWrapping="Wrap"
                               MaxHeight="20"
                               TextTrimming="CharacterEllipsis"
                               Margin="4,2,4,1"
                               LineHeight="10"
                               TextAlignment="Center"/>

                    <!-- Price -->
                    <TextBlock Grid.Row="2" 
                               Text="{Binding FormattedSalePrice}" 
                               FontWeight="Bold" 
                               FontSize="10"
                               Foreground="#2563EB"
                               HorizontalAlignment="Center"
                               Margin="4,0,4,2"/>

                    <!-- Action Buttons -->
                    <Grid Grid.Row="4" Margin="4,0,4,4">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="3"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Button Grid.Column="0" 
                                Content="ADD"
                                Command="{Binding DataContext.AddToCartCommand, 
                                         RelativeSource={RelativeSource AncestorType=UserControl}}"
                                CommandParameter="{Binding}"
                                Background="#10B981"
                                Foreground="White"
                                BorderThickness="0"
                                Height="18"
                                FontSize="7"
                                FontWeight="Bold">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" CornerRadius="2">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>

                        <Button Grid.Column="2" 
                                Content="BOX"
                                Command="{Binding DataContext.AddToCartAsBoxCommand, 
                                         RelativeSource={RelativeSource AncestorType=UserControl}}"
                                CommandParameter="{Binding}"
                                Background="#F59E0B"
                                Foreground="White"
                                BorderThickness="0"
                                Width="22"
                                Height="18"
                                FontSize="6"
                                FontWeight="Bold"
                                Visibility="{Binding ItemsPerBox, Converter={StaticResource PositiveIntToVisibilityConverter}}">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" CornerRadius="2">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </Grid>
                </Grid>
            </Border>
        </DataTemplate>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Main Content Area - Optimized 3-Column Layout -->
        <Grid Grid.Row="0" Margin="12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="280"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="300"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel - Compact Controls (Customer Section Removed) -->
            <Border Grid.Column="0" Style="{StaticResource CompactCardPanel}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Current Customer Display (Read-Only) -->
                    <Border Grid.Row="0" 
                            Background="#F8FAFC" 
                            BorderBrush="#E2E8F0" 
                            BorderThickness="0,0,0,1"
                            Padding="12,12,12,8">
                        <StackPanel>
                            <TextBlock Text="Current Customer" 
                                       Style="{StaticResource HeaderText}"/>

                            <Border Background="White" 
                                    BorderBrush="#CBD5E1" 
                                    BorderThickness="1"
                                    CornerRadius="4"
                                    Padding="8,6">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Column="0" 
                                               Text="👤" 
                                               FontSize="14"
                                               VerticalAlignment="Center"
                                               Margin="0,0,6,0"/>

                                    <TextBlock Grid.Column="1"
                                               Text="{Binding CustomerName}" 
                                               FontWeight="SemiBold"
                                               FontSize="12"
                                               Foreground="#1E293B"
                                               VerticalAlignment="Center"/>
                                </Grid>
                            </Border>
                        </StackPanel>
                    </Border>

                    <!-- Compact Table Navigation -->
                    <Border Grid.Row="1" 
                            BorderBrush="#E2E8F0"
                            BorderThickness="0,0,0,1">
                        <StackPanel Margin="12,8,12,8">
                            <Grid Margin="0,0,0,6">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0"
                                           Text="Table" 
                                           Style="{StaticResource HeaderText}"/>

                                <Border Grid.Column="1"
                                        Background="#F0F9FF"
                                        BorderBrush="#0891B2"
                                        BorderThickness="1"
                                        CornerRadius="3"
                                        Padding="4,2">
                                    <TextBlock Text="{Binding TableNavigationInfo, Mode=OneWay}"
                                               FontSize="9"
                                               Foreground="#0891B2"
                                               FontWeight="SemiBold"/>
                                </Border>
                            </Grid>

                            <!-- Compact Table Info Card -->
                            <Border Background="#F8FAFC" 
                                    BorderBrush="#CBD5E1" 
                                    BorderThickness="1"
                                    CornerRadius="4"
                                    Padding="8,6"
                                    Margin="0,0,0,6">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Column="0" 
                                               Text="🍽️" 
                                               FontSize="14"
                                               VerticalAlignment="Center"
                                               Margin="0,0,6,0"/>

                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding CurrentTableInfo, Mode=OneWay, TargetNullValue='No table'}"
                                                   FontWeight="SemiBold"
                                                   FontSize="11"
                                                   Foreground="#0F172A"/>
                                        <StackPanel Orientation="Horizontal">
                                            <Border Background="#DBEAFE" CornerRadius="2" Padding="3,1" Margin="0,0,2,0">
                                                <TextBlock FontSize="8" Foreground="#1E40AF">
                                                    <Run Text="{Binding CartItems.Count, Mode=OneWay}"/>
                                                    <Run Text="items"/>
                                                </TextBlock>
                                            </Border>
                                            <Border Background="#D1FAE5" CornerRadius="2" Padding="3,1">
                                                <TextBlock Text="{Binding TotalAmount, Mode=OneWay, StringFormat='${0:F2}'}"
                                                           FontSize="8" 
                                                           Foreground="#065F46"/>
                                            </Border>
                                        </StackPanel>
                                    </StackPanel>

                                    <Button Grid.Column="2"
                                            Content="✕"
                                            Command="{Binding CloseCurrentTableCommand}"
                                            Width="20"
                                            Height="20"
                                            Background="#EF4444"
                                            Foreground="White"
                                            BorderThickness="0"
                                            FontSize="10"
                                            Visibility="{Binding SelectedTable, Mode=OneWay, Converter={StaticResource StringToVisibilityConverter}}">
                                        <Button.Template>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" CornerRadius="10">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Button.Template>
                                    </Button>
                                </Grid>
                            </Border>

                            <Button Content="📍 Select Table"
                                    Command="{Binding SelectTableCommand}"
                                    Style="{StaticResource CompactButton}"
                                    FontSize="10"/>
                        </StackPanel>
                    </Border>

                    <!-- Compact Controls Section -->
                    <Border Grid.Row="2" 
                            BorderBrush="#E2E8F0"
                            BorderThickness="0,1,0,0">
                        <StackPanel Margin="12,8,12,8" VerticalAlignment="Bottom">
                            <!-- Compact Drawer Controls -->
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Button Grid.Column="0"
                                        Content="Open" 
                                        Command="{Binding OpenDrawerCommand}"
                                        Style="{StaticResource CompactSuccessButton}"
                                        FontSize="9"
                                        Margin="0,0,1,0"
                                        Visibility="{Binding IsDrawerOpen, Converter={StaticResource InverseBooleanToVisibilityConverter}}"/>

                                <Button Grid.Column="0"
                                        Content="Close" 
                                        Command="{Binding CloseDrawerCommand}"
                                        Style="{StaticResource CompactDangerButton}"
                                        FontSize="9"
                                        Margin="0,0,1,0"
                                        Visibility="{Binding IsDrawerOpen, Converter={StaticResource BooleanToVisibilityConverter}}"/>

                                <Button Grid.Column="1"
                                        Content="Logout" 
                                        Command="{Binding LogoutCommand}"
                                        Style="{StaticResource CompactSecondaryButton}"
                                        FontSize="9"
                                        Margin="1,0,0,0"/>
                            </Grid>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>

            <!-- Center Panel - Compact Product Grid -->
            <Border Grid.Column="1" 
                    Style="{StaticResource CompactCardPanel}" 
                    Margin="8,0,8,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <Border Grid.Row="0" Style="{StaticResource CompactCardHeader}">
                        <TextBlock Text="Products" Style="{StaticResource SectionTitle}"/>
                    </Border>

                    <!-- Compact Category Filter -->
                    <Border Grid.Row="1" 
                            Background="#F8FAFC" 
                            BorderBrush="#E2E8F0" 
                            BorderThickness="0,0,0,1" 
                            Padding="12,8">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0"
                                       Text="Category:"
                                       FontWeight="SemiBold"
                                       FontSize="12"
                                       Foreground="#374151"
                                       VerticalAlignment="Center"
                                       Margin="0,0,8,0"/>

                            <ComboBox Grid.Column="1"
                                      ItemsSource="{Binding Categories}"
                                      SelectedItem="{Binding SelectedCategory}"
                                      Style="{StaticResource CompactCategoryFilter}">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding DisplayName}"
                                                   FontSize="11"
                                                   Padding="6,3"/>
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>
                        </Grid>
                    </Border>

                    <!-- Compact Product Grid -->
                    <ScrollViewer Grid.Row="2" 
                                  VerticalScrollBarVisibility="Auto"
                                  HorizontalScrollBarVisibility="Disabled"
                                  Padding="8">
                        <ItemsControl ItemsSource="{Binding SearchedProducts}"
                                      ItemTemplate="{StaticResource CompactProductCardTemplate}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel Orientation="Horizontal" 
                                               HorizontalAlignment="Left"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </Border>

            <!-- Right Panel - Compact Cart -->
            <Border Grid.Column="2" Style="{StaticResource CompactCardPanel}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Cart Header -->
                    <Border Grid.Row="0" Style="{StaticResource CompactCardHeader}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" 
                                       Text="Cart" 
                                       Style="{StaticResource SectionTitle}"/>

                            <Button Grid.Column="1"
                                    Content="Clear" 
                                    Command="{Binding ClearCartCommand}"
                                    Style="{StaticResource CompactDangerButton}"
                                    FontSize="9"
                                    Padding="6,3"/>
                        </Grid>
                    </Border>

                    <!-- Cart Items -->
                    <ScrollViewer Grid.Row="1" 
                                  VerticalScrollBarVisibility="Auto"
                                  HorizontalScrollBarVisibility="Disabled">
                        <ItemsControl ItemsSource="{Binding CartItems}"
                                      ItemTemplate="{StaticResource CompactCartItemTemplate}"/>
                    </ScrollViewer>

                    <!-- Cart Totals -->
                    <Border Grid.Row="2" 
                            Background="#F8FAFC" 
                            BorderBrush="#E2E8F0" 
                            BorderThickness="0,1,0,0" 
                            Padding="12,8">
                        <StackPanel>
                            <Grid Margin="0,0,0,4">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0" 
                                           Text="Total" 
                                           FontSize="14" 
                                           FontWeight="Bold" 
                                           Foreground="#1E293B"/>

                                <TextBlock Grid.Column="1" 
                                           Text="{Binding TotalAmount, StringFormat='${0:F2}'}" 
                                           FontSize="16"
                                           FontWeight="Bold" 
                                           Foreground="#1E293B"/>
                            </Grid>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0" 
                                           Text="LBP"
                                           FontSize="11" 
                                           FontWeight="SemiBold" 
                                           Foreground="#2563EB"/>

                                <TextBlock Grid.Column="1" 
                                           Text="{Binding ExchangeAmount, StringFormat=N0}"
                                           FontSize="11" 
                                           FontWeight="SemiBold" 
                                           Foreground="#2563EB"/>
                            </Grid>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>
        </Grid>

        <!-- Compact Payment Footer -->
        <Border Grid.Row="1" 
                Style="{StaticResource CompactCardPanel}" 
                Margin="12,0,12,0"
                Background="#FEFEFE">
            <Grid Margin="12,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="250"/>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Price Mode & Status -->
                <StackPanel Grid.Column="0" Margin="0,0,12,0">
                    <TextBlock Text="Payment" Style="{StaticResource SectionTitle}" Margin="0,0,0,6"/>

                    <Grid Margin="0,0,0,4">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" 
                                   Text="Mode:" 
                                   Style="{StaticResource CompactText}"
                                   VerticalAlignment="Center"
                                   FontSize="10"/>

                        <ComboBox Grid.Column="1" 
                                  Height="26"
                                  HorizontalAlignment="Right"
                                  MinWidth="80"
                                  FontSize="10"
                                  SelectedIndex="{Binding WholesaleMode, Converter={StaticResource BooleanToIndexConverter}}">
                            <ComboBoxItem Content="Retail"/>
                            <ComboBoxItem Content="Wholesale"/>
                        </ComboBox>
                    </Grid>

                    <!-- Drawer Status -->
                    <StackPanel>
                        <Border Background="#059669" 
                                CornerRadius="3"
                                Padding="6,3"
                                Visibility="{Binding IsDrawerOpen, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <TextBlock Text="Drawer Open" 
                                       Foreground="White" 
                                       FontWeight="Bold" 
                                       FontSize="9"
                                       HorizontalAlignment="Center"/>
                        </Border>
                        <Border Background="#DC2626" 
                                CornerRadius="3"
                                Padding="6,3"
                                Visibility="{Binding IsDrawerOpen, Converter={StaticResource InverseBooleanToVisibilityConverter}}">
                            <TextBlock Text="Drawer Closed" 
                                       Foreground="White" 
                                       FontWeight="Bold"
                                       FontSize="9"
                                       HorizontalAlignment="Center"/>
                        </Border>
                    </StackPanel>
                </StackPanel>

                <!-- Payment Input -->
                <StackPanel Grid.Column="1" Margin="0,0,12,0">
                    <Grid Margin="0,0,0,4">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" 
                                   Text="Amount Due" 
                                   FontWeight="Bold"
                                   FontSize="12"
                                   Foreground="#1E293B"/>

                        <TextBlock Grid.Column="1" 
                                   Text="{Binding TotalAmount, StringFormat='${0:F2}'}" 
                                   FontSize="14"
                                   FontWeight="Bold"
                                   Foreground="#1E293B"/>
                    </Grid>

                    <TextBlock Text="Payment" 
                               Style="{StaticResource CompactText}"
                               Margin="0,0,0,2"/>

                    <Border Background="White" 
                            BorderBrush="#CBD5E1" 
                            BorderThickness="1"
                            CornerRadius="4"
                            Height="30"
                            Margin="0,0,0,4">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" 
                                       Text="$" 
                                       Margin="8,0,0,0"
                                       VerticalAlignment="Center"
                                       FontWeight="SemiBold"/>

                            <TextBox Grid.Column="1"
                                     Text="{Binding PaidAmount, StringFormat=N2, UpdateSourceTrigger=PropertyChanged}" 
                                     BorderThickness="0"
                                     Background="Transparent"
                                     Padding="0,0,8,0"
                                     VerticalContentAlignment="Center"
                                     HorizontalContentAlignment="Right"
                                     FontSize="12"/>
                        </Grid>
                    </Border>

                    <CheckBox Content="Add to Debt" 
                              IsChecked="{Binding AddToCustomerDebt}"
                              Foreground="#1E293B"
                              FontSize="10"/>
                </StackPanel>

                <!-- Transaction Info -->
                <StackPanel Grid.Column="2" Margin="0,0,12,0">
                    <Grid Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" 
                                   Text="Change" 
                                   FontWeight="Bold"
                                   FontSize="12"
                                   Foreground="#1E293B"/>

                        <TextBlock Grid.Column="1" 
                                   Text="{Binding ChangeDueAmount, StringFormat='${0:F2}'}" 
                                   FontSize="14"
                                   FontWeight="Bold"
                                   Foreground="#059669"/>
                    </Grid>
                </StackPanel>

                <!-- Action Buttons -->
                <StackPanel Grid.Column="3" 
                            Orientation="Horizontal" 
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center">
                    <Button Content="Complete Sale" 
                            Command="{Binding CheckoutCommand}"
                            Style="{StaticResource CompactSuccessButton}"
                            Height="38"
                            MinWidth="100"
                            FontSize="12"
                            FontWeight="Bold"
                            IsEnabled="{Binding IsDrawerOpen}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Compact Status Bar -->
        <Border Grid.Row="2" 
                Background="#F1F5F9" 
                BorderBrush="#E2E8F0" 
                BorderThickness="0,1,0,0" 
                Padding="12,6">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           Text="{Binding StatusMessage}" 
                           Foreground="#1E293B" 
                           FontSize="11"
                           VerticalAlignment="Center"/>

                <ProgressBar Grid.Column="1" 
                             IsIndeterminate="True" 
                             Width="100" 
                             Height="3"
                             Foreground="#2563EB"
                             Visibility="{Binding IsProcessing, Converter={StaticResource BooleanToVisibilityConverter}}" />
            </Grid>
        </Border>
    </Grid>
</UserControl>