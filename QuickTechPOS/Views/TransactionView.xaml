<UserControl x:Class="QuickTechPOS.Views.TransactionView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QuickTechPOS"
             xmlns:converters="clr-namespace:QuickTechPOS.Converters"
             xmlns:helpers="clr-namespace:QuickTechPOS.Helpers"
             mc:Ignorable="d" 
             d:DesignHeight="768" d:DesignWidth="1024"
             Background="#F8FAFC"
             UseLayoutRounding="True">

    <UserControl.Resources>
        <local:BooleanToIndexConverter x:Key="BooleanToIndexConverter"/>
        <local:BooleanToWholesaleTextConverter x:Key="BooleanToWholesaleTextConverter"/>
        <local:BooleanToStringConverter x:Key="BooleanToStringConverter"/>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <local:InverseBooleanToVisibilityConverter x:Key="InverseBooleanToVisibilityConverter"/>
        <local:PositiveIntToVisibilityConverter x:Key="PositiveIntToVisibilityConverter"/>
        <local:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
        <local:ImagePathToVisibilityConverter x:Key="ImagePathToVisibilityConverter"/>
        <local:NumericToVisibilityConverter x:Key="NumericToVisibilityConverter"/>
        <converters:FirstLetterConverter x:Key="FirstLetterConverter"/>
        <helpers:ImagePathConverter x:Key="ImagePathConverter"/>

        <DropShadowEffect x:Key="DropShadowEffect" ShadowDepth="2" Direction="270" 
                          Color="#1E293B" Opacity="0.08" BlurRadius="8"/>

        <Style x:Key="HeaderText" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Foreground" Value="#1E293B"/>
            <Setter Property="Margin" Value="0,0,0,6"/>
        </Style>

        <Style x:Key="SectionTitle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Foreground" Value="#334155"/>
            <Setter Property="Margin" Value="0"/>
        </Style>

        <Style x:Key="TouchText" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#64748B"/>
            <Setter Property="Margin" Value="0"/>
        </Style>

        <Style x:Key="TouchSearchBox" TargetType="TextBox">
            <Setter Property="Height" Value="45"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="12,0"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="#CBD5E1"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <ScrollViewer x:Name="PART_ContentHost" Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="TouchCategoryFilter" TargetType="ComboBox">
            <Setter Property="Height" Value="48"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="12,0"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="#CBD5E1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <Style x:Key="TouchButton" TargetType="Button">
            <Setter Property="Background" Value="#2563EB"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,12"/>
            <Setter Property="MinHeight" Value="45"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"
                                              Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1D4ED8"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#1E40AF"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#94A3B8"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="TouchSecondaryButton" TargetType="Button" BasedOn="{StaticResource TouchButton}">
            <Setter Property="Background" Value="#64748B"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#475569"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#334155"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="TouchSuccessButton" TargetType="Button" BasedOn="{StaticResource TouchButton}">
            <Setter Property="Background" Value="#10B981"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#059669"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#047857"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="TouchDangerButton" TargetType="Button" BasedOn="{StaticResource TouchButton}">
            <Setter Property="Background" Value="#EF4444"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#DC2626"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#B91C1C"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="TouchWarningButton" TargetType="Button" BasedOn="{StaticResource TouchButton}">
            <Setter Property="Background" Value="#F59E0B"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#D97706"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#B45309"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="TouchIconButton" TargetType="Button">
            <Setter Property="Width" Value="45"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="#CBD5E1"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F1F5F9"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#E2E8F0"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Opacity" Value="0.5"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="TouchCardPanel" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E2E8F0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Effect" Value="{StaticResource DropShadowEffect}"/>
        </Style>

        <Style x:Key="TouchCardHeader" TargetType="Border">
            <Setter Property="Background" Value="#F8FAFC"/>
            <Setter Property="BorderBrush" Value="#E2E8F0"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="CornerRadius" Value="8,8,0,0"/>
        </Style>

        <Style x:Key="TouchProductCard" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E2E8F0"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Margin" Value="0,0,6,6"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Height" Value="115"/>
            <Setter Property="Width" Value="145"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect ShadowDepth="1" Direction="270" 
                                      Color="#1E293B" Opacity="0.12" BlurRadius="6"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="#2563EB"/>
                    <Setter Property="BorderThickness" Value="3"/>
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect ShadowDepth="2" Direction="270" 
                                              Color="#2563EB" Opacity="0.25" BlurRadius="8"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Opacity" Value="0.6"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="TouchCategoryCard" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E2E8F0"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Margin" Value="0,0,8,8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Height" Value="170"/>
            <Setter Property="Width" Value="160"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect ShadowDepth="2" Direction="270" 
                                      Color="#1E293B" Opacity="0.08" BlurRadius="8"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="#3B82F6"/>
                    <Setter Property="BorderThickness" Value="3"/>
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect ShadowDepth="4" Direction="270" 
                                              Color="#3B82F6" Opacity="0.25" BlurRadius="12"/>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="RenderTransform">
                        <Setter.Value>
                            <ScaleTransform ScaleX="1.02" ScaleY="1.02"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Touch-Optimized Cart Item Template - IMPROVED for Better Decimal Input Experience -->
        <DataTemplate x:Key="TouchCartItemTemplate">
            <Border BorderBrush="#F1F5F9" BorderThickness="0,0,0,1" Padding="12,10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="55"/>
                        <ColumnDefinition Width="70"/>
                        <ColumnDefinition Width="30"/>
                    </Grid.ColumnDefinitions>

                    <!-- Product Info -->
                    <StackPanel Grid.Column="0">
                        <TextBlock Text="{Binding Product.Name}" 
                           FontWeight="SemiBold" 
                           FontSize="13"
                           Foreground="#1E293B"
                           TextTrimming="CharacterEllipsis"
                           MaxWidth="150"/>
                        <TextBlock Text="{Binding UnitPrice, StringFormat='${0:F2}'}" 
                           FontSize="11"
                           Foreground="#64748B"/>
                    </StackPanel>

                    <!-- IMPROVED: Better Quantity Input with Immediate Feedback -->
                    <Border Grid.Column="1" 
                    Background="White" 
                    BorderBrush="#CBD5E1" 
                    BorderThickness="2"
                    CornerRadius="6"
                    Height="32">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="BorderBrush" Value="#CBD5E1"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ElementName=QuantityTextBox, Path=IsFocused}" Value="True">
                                        <Setter Property="BorderBrush" Value="#2563EB"/>
                                        <Setter Property="BorderThickness" Value="3"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>

                        <TextBox x:Name="QuantityTextBox"
                         Text="{Binding Quantity, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                         BorderThickness="0"
                         Background="Transparent"
                         VerticalContentAlignment="Center"
                         HorizontalContentAlignment="Center"
                         FontSize="13"
                         FontWeight="SemiBold"
                         TextAlignment="Center"
                         MaxLength="8"
                         LostFocus="Quantity_LostFocus"
                         GotFocus="Quantity_GotFocus"
                         KeyDown="Quantity_KeyDown"
                         PreviewTextInput="Quantity_PreviewTextInput"
                         ToolTip="Enter quantity: 1, 1.5, 1,4 (decimals allowed)">

                            <TextBox.Style>
                                <Style TargetType="TextBox">
                                    <Setter Property="Foreground" Value="#1E293B"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsFocused" Value="True">
                                            <Setter Property="Background" Value="#F0F9FF"/>
                                        </Trigger>
                                        <!-- Validation state indicators -->
                                        <DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=Tag}" Value="Invalid">
                                            <Setter Property="Foreground" Value="#DC2626"/>
                                            <Setter Property="Background" Value="#FEF2F2"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=Tag}" Value="Valid">
                                            <Setter Property="Foreground" Value="#059669"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBox.Style>
                        </TextBox>
                    </Border>

                    <!-- Total -->
                    <TextBlock Grid.Column="2" 
                       Text="{Binding Total, StringFormat='${0:F2}'}" 
                       FontWeight="Bold" 
                       FontSize="13"
                       Foreground="#1E293B"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Right"/>

                    <!-- Remove Button -->
                    <Button Grid.Column="3" 
                    Content="×" 
                    Command="{Binding DataContext.RemoveFromCartCommand, 
                             RelativeSource={RelativeSource AncestorType=UserControl}}"
                    CommandParameter="{Binding}"
                    Width="24" 
                    Height="24"
                    Background="#EF4444"
                    Foreground="White"
                    FontWeight="Bold"
                    FontSize="14"
                    BorderThickness="0"
                    Cursor="Hand">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" 
                                CornerRadius="5">
                                    <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                        <Button.Style>
                            <Style TargetType="Button">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#DC2626"/>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter Property="Background" Value="#B91C1C"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>
            </Border>
        </DataTemplate>

        <DataTemplate x:Key="TouchCategoryCardTemplate">
            <Border Style="{StaticResource TouchCategoryCard}">
                <Border.InputBindings>
                    <MouseBinding MouseAction="LeftClick" 
                                  Command="{Binding DataContext.SelectCategoryCardCommand, 
                                           RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                  CommandParameter="{Binding}"/>
                </Border.InputBindings>

                <Grid Margin="12">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0"
                            HorizontalAlignment="Center" 
                            VerticalAlignment="Top"
                            CornerRadius="25"
                            Width="50"
                            Height="50"
                            Background="#3B82F6"
                            Margin="0,0,0,10">
                        <TextBlock Text="{Binding Name, Converter={StaticResource FirstLetterConverter}}"
                                   FontSize="24"
                                   FontWeight="Bold"
                                   Foreground="White"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                    </Border>

                    <StackPanel Grid.Row="1"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Margin="0,0,0,10">
                        <TextBlock Text="{Binding Name}" 
                                   FontWeight="Bold" 
                                   FontSize="14"
                                   Foreground="#1E293B"
                                   TextAlignment="Center"
                                   TextWrapping="Wrap"
                                   LineHeight="18"
                                   MaxWidth="130"/>
                    </StackPanel>

                    <StackPanel Grid.Row="2"
                                HorizontalAlignment="Center"
                                Margin="0,0,0,8">
                        <TextBlock Text="{Binding ProductCount, StringFormat={}{0} Products}" 
                                   FontWeight="SemiBold" 
                                   FontSize="13"
                                   Foreground="#64748B"
                                   TextAlignment="Center"/>
                    </StackPanel>

                    <TextBlock Grid.Row="3"
                               Text="Tap to Browse"
                               FontSize="11"
                               FontStyle="Italic"
                               Foreground="#94A3B8"
                               HorizontalAlignment="Center"/>
                </Grid>
            </Border>
        </DataTemplate>

        <DataTemplate x:Key="TouchProductCardTemplate">
            <Border Style="{StaticResource TouchProductCard}">
                <Border.InputBindings>
                    <MouseBinding MouseAction="LeftClick" 
                                  Command="{Binding DataContext.AddToCartCommand, 
                                           RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                  CommandParameter="{Binding}"/>
                </Border.InputBindings>

                <Grid Margin="8">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0"
                            HorizontalAlignment="Right" 
                            VerticalAlignment="Top"
                            CornerRadius="3"
                            Padding="4,1"
                            Margin="0,0,0,4">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding StockStatus}" Value="In Stock">
                                        <Setter Property="Background" Value="#10B981"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding StockStatus}" Value="Low Stock">
                                        <Setter Property="Background" Value="#F59E0B"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding StockStatus}" Value="Out of Stock">
                                        <Setter Property="Background" Value="#EF4444"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <TextBlock Text="{Binding CurrentStock}" 
                                   FontSize="9" 
                                   FontWeight="Bold" 
                                   Foreground="White"/>
                    </Border>

                    <StackPanel Grid.Row="1"
                                HorizontalAlignment="Center"
                                Margin="0,0,0,6"
                                MaxHeight="48">
                        <TextBlock Text="{Binding Name}" 
                                   FontWeight="SemiBold" 
                                   FontSize="12"
                                   Foreground="#1E293B"
                                   TextAlignment="Center"
                                   TextWrapping="Wrap"
                                   TextTrimming="CharacterEllipsis"
                                   MaxHeight="36"/>
                    </StackPanel>

                    <StackPanel Grid.Row="2"
                                HorizontalAlignment="Center"
                                Margin="0,2,0,6">
                        <TextBlock Text="{Binding FormattedSalePrice}" 
                                   FontWeight="Bold" 
                                   FontSize="16"
                                   Foreground="#2563EB"
                                   TextAlignment="Center"/>
                    </StackPanel>

                    <TextBlock Grid.Row="3"
                               Text="Tap to Add"
                               FontSize="10"
                               FontStyle="Italic"
                               Foreground="#64748B"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,1"/>
                </Grid>
            </Border>
        </DataTemplate>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="300"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" 
                    Style="{StaticResource TouchCardPanel}" 
                    Margin="0,0,12,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Style="{StaticResource TouchCardHeader}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Button Grid.Column="0"
                                    Content="← Categories" 
                                    Command="{Binding ShowCategoriesCommand}"
                                    Style="{StaticResource TouchSecondaryButton}"
                                    FontSize="14"
                                    Padding="12,8"
                                    Margin="0,0,12,0"
                                    Visibility="{Binding IsShowingCategories, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=Invert}"/>

                            <TextBlock Grid.Column="1" 
                                       Text="{Binding CurrentPageTitle}" 
                                       Style="{StaticResource SectionTitle}"/>
                        </Grid>
                    </Border>

                    <ScrollViewer Grid.Row="1" 
                                  VerticalScrollBarVisibility="Auto"
                                  HorizontalScrollBarVisibility="Disabled"
                                  Padding="8">
                        <Grid>
                            <ItemsControl ItemsSource="{Binding Categories}"
                                          ItemTemplate="{StaticResource TouchCategoryCardTemplate}"
                                          Visibility="{Binding IsShowingCategories, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel Orientation="Horizontal" 
                                                   HorizontalAlignment="Left"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                            </ItemsControl>

                            <ItemsControl ItemsSource="{Binding SearchedProducts}"
                                          ItemTemplate="{StaticResource TouchProductCardTemplate}"
                                          Visibility="{Binding IsShowingCategories, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=Invert}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel Orientation="Horizontal" 
                                                   HorizontalAlignment="Left"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                            </ItemsControl>
                        </Grid>
                    </ScrollViewer>
                </Grid>
            </Border>

            <Border Grid.Column="1" Style="{StaticResource TouchCardPanel}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Style="{StaticResource TouchCardHeader}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" 
                                       Text="Cart" 
                                       Style="{StaticResource SectionTitle}"/>

                            <Button Grid.Column="1"
                                    Content="Clear" 
                                    Command="{Binding ClearCartCommand}"
                                    Style="{StaticResource TouchDangerButton}"
                                    FontSize="11"
                                    Padding="10,5"/>
                        </Grid>
                    </Border>

                    <ScrollViewer Grid.Row="1" 
                                  VerticalScrollBarVisibility="Auto"
                                  HorizontalScrollBarVisibility="Disabled">
                        <ItemsControl ItemsSource="{Binding CartItems}"
                                      ItemTemplate="{StaticResource TouchCartItemTemplate}"/>
                    </ScrollViewer>

                    <Border Grid.Row="2" 
                            Background="#F8FAFC" 
                            BorderBrush="#E2E8F0" 
                            BorderThickness="0,1,0,0" 
                            Padding="16,12">
                        <StackPanel>
                            <Grid Margin="0,0,0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0" 
                                           Text="Total" 
                                           FontSize="18" 
                                           FontWeight="Bold" 
                                           Foreground="#1E293B"/>

                                <TextBlock Grid.Column="1" 
                                           Text="{Binding TotalAmount, StringFormat='${0:F2}'}" 
                                           FontSize="22"
                                           FontWeight="Bold" 
                                           Foreground="#1E293B"/>
                            </Grid>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0" 
                                           Text="LBP"
                                           FontSize="14" 
                                           FontWeight="SemiBold" 
                                           Foreground="#2563EB"/>

                                <TextBlock Grid.Column="1" 
                                           Text="{Binding ExchangeAmount, StringFormat=N0}"
                                           FontSize="14" 
                                           FontWeight="SemiBold" 
                                           Foreground="#2563EB"/>
                            </Grid>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>
        </Grid>

        <Border Grid.Row="1" 
                Background="White" 
                BorderBrush="#E2E8F0" 
                BorderThickness="0,1,0,0" 
                Padding="16,12"
                Effect="{StaticResource DropShadowEffect}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Drawer Status -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="0,0,20,0">
                    <TextBlock Text="💰" FontSize="16" Margin="0,0,6,0"/>
                    <TextBlock Text="Drawer:" FontWeight="SemiBold" FontSize="14" Margin="0,0,4,0"/>
                    <TextBlock Text="{Binding IsDrawerOpen, Converter={StaticResource BooleanToStringConverter}, ConverterParameter='OPEN|CLOSED'}" 
                               FontSize="14" FontWeight="Bold">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsDrawerOpen}" Value="True">
                                        <Setter Property="Foreground" Value="#10B981"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding IsDrawerOpen}" Value="False">
                                        <Setter Property="Foreground" Value="#EF4444"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </StackPanel>

                <!-- Current Table Display -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="0,0,20,0"
            Visibility="{Binding SelectedTable, Converter={StaticResource StringToVisibilityConverter}}">
                    <TextBlock Text="📍" FontSize="16" Margin="0,0,6,0"/>
                    <TextBlock Text="Table:" FontWeight="SemiBold" FontSize="14" Margin="0,0,4,0"/>

                    <!-- Enhanced table display with fallback -->
                    <TextBlock FontSize="14" FontWeight="Bold" Foreground="#2563EB">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Text" Value="{Binding SelectedTable.DisplayName}"/>
                                <Style.Triggers>
                                    <!-- Fallback if DisplayName is empty -->
                                    <DataTrigger Binding="{Binding SelectedTable.DisplayName}" Value="">
                                        <Setter Property="Text" Value="{Binding SelectedTable.TableNumber, StringFormat='Table {0}'}"/>
                                    </DataTrigger>
                                    <!-- Another fallback if TableNumber is 0 -->
                                    <DataTrigger Binding="{Binding SelectedTable.TableNumber}" Value="0">
                                        <Setter Property="Text" Value="{Binding SelectedTable.Id, StringFormat='Table ID: {0}'}"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>

                    <TextBlock Text="{Binding SelectedTable.Status, StringFormat=' ({0})'}" 
               FontSize="12" FontWeight="SemiBold" Margin="2,0,0,0">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SelectedTable.Status}" Value="Available">
                                        <Setter Property="Foreground" Value="#10B981"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding SelectedTable.Status}" Value="Occupied">
                                        <Setter Property="Foreground" Value="#EF4444"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding SelectedTable.Status}" Value="Reserved">
                                        <Setter Property="Foreground" Value="#F59E0B"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </StackPanel>

                <!-- Select Table Button -->
                <Button Grid.Column="2"
        Style="{StaticResource TouchButton}"
        Height="50"
        FontSize="12"
        Padding="10,6"
        Margin="0,0,12,0"
        Command="{Binding SelectTableCommand}">
                    <Button.Content>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock VerticalAlignment="Center">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Text" Value="📍 Select Table"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding SelectedTable, Converter={StaticResource StringToVisibilityConverter}}" Value="Visible">
                                                <Setter Property="Text" Value="📍 Change Table"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </StackPanel>
                    </Button.Content>
                </Button>
                <!-- Print Button -->
                <Button Grid.Column="4"
                        Content="🖨️ Print" 
                        Command="{Binding PrintReceiptCommand}"
                        Style="{StaticResource TouchButton}"
                        Height="50"
                        MinWidth="100"
                        FontSize="15"
                        FontWeight="Bold"
                        Margin="0,0,10,0"/>

                <!-- Complete Sale Button -->
                <Button Grid.Column="5"
                        Content="Complete Sale" 
                        Command="{Binding CheckoutCommand}"
                        Style="{StaticResource TouchSuccessButton}"
                        Height="50"
                        MinWidth="160"
                        FontSize="16"
                        FontWeight="Bold"
                        IsEnabled="{Binding IsDrawerOpen}"/>
            </Grid>
        </Border>

        <Border Grid.Row="2" 
                Background="#F1F5F9" 
                BorderBrush="#E2E8F0" 
                BorderThickness="0,1,0,0" 
                Padding="16,6">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           Text="{Binding StatusMessage}" 
                           Foreground="#1E293B" 
                           FontSize="14"
                           VerticalAlignment="Center"/>

                <ProgressBar Grid.Column="1" 
                             IsIndeterminate="True" 
                             Width="120" 
                             Height="4"
                             Foreground="#2563EB"
                             Visibility="{Binding IsProcessing, Converter={StaticResource BooleanToVisibilityConverter}}" />
            </Grid>
        </Border>
    </Grid>
</UserControl>